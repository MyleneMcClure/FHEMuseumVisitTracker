# ============================================
# Network Configuration
# ============================================

# Sepolia Testnet RPC URL
# Get from: https://infura.io or https://alchemy.com
SEPOLIA_RPC_URL=https://rpc.sepolia.org

# Private Key for deployment (without 0x prefix)
# SECURITY: Never commit actual private keys!
PRIVATE_KEY=your_private_key_here

# ============================================
# Etherscan Configuration
# ============================================

# Etherscan API Key for contract verification
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# ============================================
# Contract Configuration
# ============================================

# Deployed contract address (filled after deployment)
CONTRACT_ADDRESS=

# Museum Manager Address (optional, defaults to deployer)
MUSEUM_MANAGER_ADDRESS=

# Pauser Address (for emergency pause functionality)
PAUSER_ADDRESS=

# ============================================
# Gas Optimization Configuration
# ============================================

# Enable gas reporting during tests
# Set to 'true' to generate gas-report.txt
REPORT_GAS=false

# CoinMarketCap API Key for gas cost in USD
# Get from: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=

# Gas Price API endpoint (optional)
GAS_PRICE_API=

# Gas limit for transactions (optional, use 'auto' if not set)
GAS_LIMIT=auto

# Gas price in gwei (optional, use 'auto' if not set)
GAS_PRICE=auto

# ============================================
# Security Configuration
# ============================================

# Rate limiting for contract interactions (calls per minute)
RATE_LIMIT=100

# Maximum gas price willing to pay (in gwei)
MAX_GAS_PRICE=100

# Enable security checks before deployment
SECURITY_CHECKS=true

# Enable DoS protection mechanisms
DOS_PROTECTION=true

# ============================================
# Performance Configuration
# ============================================

# Compiler optimization runs (higher = cheaper execution, costlier deployment)
# Recommended: 200-1000 depending on usage patterns
OPTIMIZER_RUNS=800

# Enable via-IR compilation (more aggressive optimization)
VIA_IR=false

# Enable YUL optimizer
YUL_OPTIMIZER=true

# ============================================
# Testing Configuration
# ============================================

# Timeout for test execution (milliseconds)
TEST_TIMEOUT=40000

# Enable coverage reporting
COVERAGE=false

# Coverage threshold percentage
COVERAGE_THRESHOLD=80

# ============================================
# CI/CD Configuration
# ============================================

# Codecov token for coverage reporting
# Get from: https://codecov.io
CODECOV_TOKEN=

# Enable automatic deployment on CI
AUTO_DEPLOY=false

# Environment for deployment (development, staging, production)
DEPLOY_ENV=development

# ============================================
# Monitoring Configuration
# ============================================

# Enable contract monitoring
MONITORING_ENABLED=false

# Monitoring service endpoint
MONITORING_ENDPOINT=

# Alert email for critical issues
ALERT_EMAIL=

# ============================================
# Frontend Configuration (if applicable)
# ============================================

# Frontend application URL
FRONTEND_URL=http://localhost:3000

# API endpoint for backend services
API_ENDPOINT=http://localhost:8545

# Enable frontend caching
CACHE_ENABLED=true

# Cache duration in seconds
CACHE_DURATION=3600

# ============================================
# Development Configuration
# ============================================

# Enable debug mode
DEBUG=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable verbose output
VERBOSE=false

# ============================================
# Deployment Configuration
# ============================================

# Deployment confirmation blocks to wait
CONFIRMATIONS=3

# Deployment timeout (milliseconds)
DEPLOYMENT_TIMEOUT=120000

# Enable deployment dry run
DRY_RUN=false

# ============================================
# Access Control Configuration
# ============================================

# Admin addresses (comma-separated)
ADMIN_ADDRESSES=

# Moderator addresses (comma-separated)
MODERATOR_ADDRESSES=

# Pauser addresses (comma-separated for multiple pausers)
PAUSER_ADDRESSES=

# Enable multi-sig for admin functions
MULTISIG_ENABLED=false

# Multi-sig threshold (if enabled)
MULTISIG_THRESHOLD=2

# ============================================
# Feature Flags
# ============================================

# Enable emergency pause functionality
EMERGENCY_PAUSE_ENABLED=true

# Enable automatic upgrades
AUTO_UPGRADE_ENABLED=false

# Enable maintenance mode
MAINTENANCE_MODE=false

# ============================================
# Analytics Configuration
# ============================================

# Enable analytics tracking
ANALYTICS_ENABLED=false

# Analytics service endpoint
ANALYTICS_ENDPOINT=

# Analytics API key
ANALYTICS_API_KEY=

# ============================================
# Backup Configuration
# ============================================

# Enable automatic backups
BACKUP_ENABLED=false

# Backup interval in hours
BACKUP_INTERVAL=24

# Backup storage location
BACKUP_STORAGE=./backups

# ============================================
# Notes
# ============================================

# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env file to version control
# 3. Keep your private keys secure and never share them
# 4. Use different keys for development and production
# 5. Regularly rotate your API keys and secrets
# 6. Review security settings before deployment
# 7. Enable monitoring and alerts for production deployments
# 8. Test all configurations in development environment first
