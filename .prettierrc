plugins:
  - "prettier-plugin-solidity"
printWidth: 100
tabWidth: 2
useTabs: false
semi: true
singleQuote: false
trailingComma: "es5"
bracketSpacing: true
arrowParens: "always"
endOfLine: "lf"

overrides:
  - files: "*.md"
    options:
      proseWrap: "always"
  - files: "*.sol"
    options:
      compiler: "0.8.24"
      printWidth: 120
      tabWidth: 4
      bracketSpacing: false
